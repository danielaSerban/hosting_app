<%= simple_form_for @provider do |f| %>

    <% if @provider.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@provider.errors.count, "error") %> prohibited this server from being saved:</h2>

          <ul>
            <% @provider.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.input :name, label: "Name"%>
    <%= f.input :contactname, label: "Full contact name" %>
    <%= f.input :contactemail, label: "E-mail" %>
    <%= f.input :username, label: "Your desired username" %>
    <%= f.input :password, hint: false, error_html: { id: 'password_error'}, label:"Password" %>
    <%= f.input :password_confirmation, label: false %>
    <%= f.button :submit,  :class => "btn btn-primary" %>
<% end %>